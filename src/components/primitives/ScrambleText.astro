---
import ScrambleTextReact from "../ScrambleTextReact";

interface Props {
  text: string;
  class?: string;
  letterClass?: string;
  steps?: number;
  interval?: number;
  letterInterval?: number;
  initialText?: string;
}

const props = Astro.props;

const {
  text,
  class: className = "",
  letterClass = "",
  steps = 3,
  interval = 30,
  letterInterval = 10,
  initialText = "",
} = props;

---

<ScrambleTextReact
  client:load
  text={text}
  className={className}
  letterClass={letterClass}
  steps={steps}
  interval={interval}
  letterInterval={letterInterval}
  initialText={initialText}
  monospace={true}
/>
