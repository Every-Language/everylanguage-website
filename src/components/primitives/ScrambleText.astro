---
import ScrambleTextReact from "../ScrambleTextReact";

interface Props {
  text: string;
  class?: string;
  letterClass?: string;
  shuffleTime?: number;
  cyclesPerLetter?: number;
}

const props = Astro.props;

const {
  text,
  class: className = "",
  letterClass = "",
  shuffleTime = 80,
  cyclesPerLetter = 2,
} = props;
---

<ScrambleTextReact
  client:load
  text={text}
  className={className}
  letterClass={letterClass}
  monospace={true}
  shuffleTime={shuffleTime}
  cyclesPerLetter={cyclesPerLetter}
/>
