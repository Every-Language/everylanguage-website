---
import ContactFormReact from "@/components/ContactFormReact.tsx";
import { Image } from "astro:assets";

interface Props {
  title: string;
  subtitle: string;
  donationTitle: string;
  donationDescription: string;
  donationImage: string;
  donationImageAlt: string;
  donationButtonText: string;
  donationButtonUrl: string;
  newsletterTitle: string;
  newsletterDescription: string;
}

const props = Astro.props;
---

<div class="w-full max-w-7xl mx-auto">
  <h1
    class="text-[2.13rem] leading-9 font-semibold lg:max-w-[64%]font-bold mb-12"
  >
    {props.title}
  </h1>

  <div
    class="text-sm font-medium auto-cols-fr grid-cols-1 md:grid-cols-2 grid-rows-[auto_auto] grid gap-[3.13rem]"
  >
    {/* Donation Section */}
    <div class="space-y-6">
      <h2
        class="text-2xl font-medium border-l-4 pl-4"
        style="border-color: #d89e0f;"
      >
        {props.donationTitle}
      </h2>

      <p class="text-gray-700">
        {props.donationDescription}
      </p>

      <div
        class="aspect-video bg-gray-50 border border-gray-100 flex items-center justify-center rounded-lg overflow-hidden"
      >
        <Image
          src={props.donationImage}
          alt={props.donationImageAlt}
          width={800}
          height={450}
          format="webp"
          class="max-h-full rounded-lg object-cover w-full"
        />
      </div>

      <a
        href={props.donationButtonUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center justify-center gap-2 w-full py-6 text-black hover:text-white"
        style="background-color: #d89e0f; border-color: #d89e0f;"
      >
        {props.donationButtonText}
        <i class="i-lucide-external-link h-4 w-4"></i>
      </a>
    </div>

    {/* Newsletter Section */}
    <div class="space-y-6">
      <h2
        class="text-2xl font-medium border-l-4 pl-4"
        style="border-color: #d89e0f;"
      >
        {props.newsletterTitle}
      </h2>

      <p class="text-gray-700">
        {props.newsletterDescription}
      </p>

      <ContactFormReact client:load />
    </div>
  </div>
</div>
